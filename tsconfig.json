{
    "compilerOptions": {
        "alwaysStrict": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": false,
        "strict": true,
        "outDir": "./build",
        "target": "ES5",
    },
    "include": [
        "./src/**/*.ts"
    ]
}
